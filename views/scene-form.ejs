<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <h1><%= title %></h1>
    <form id="sceneForm" action="<%= scene.id ? '/scenes/' + scene.id : '/scenes' %>" method="POST">
        <input type="hidden" name="id" value="<%= scene.id %>">
        
        <div>
            <label for="character_id">Character:</label>
            <select id="character_id" name="character_id" required>
                <% characters.forEach(function(character) { %>
                    <option value="<%= character.id %>" <%= (scene.character_id === character.id) ? 'selected' : '' %>>
                        <%= character.char_name %>
                    </option>
                <% }); %>
            </select>
        </div>

        <div>
            <label for="scene_name">Scene Name:</label>
            <input type="text" id="scene_name" name="scene_name" value="<%= scene.scene_name || '' %>" required>
        </div>

        <h2>Steps</h2>
        <div id="steps">
            <% (scene.steps || []).forEach(function(step, index) { %>
                <div class="step" data-index="<%= index %>">
                    <h3>Step <%= index + 1 %></h3>
                    <input type="hidden" name="steps[<%= index %>][type]" value="<%= step.type %>">
                    <p>Type: <%= step.type %></p>
                    <p>Description: <%= step.description %></p>
                    <button type="button" onclick="editStep(<%= index %>)">Edit</button>
                    <button type="button" onclick="removeStep(<%= index %>)">Remove</button>
                </div>
            <% }); %>
        </div>
        
        <button type="button" onclick="showAddStepForm()">Add Step</button>
        <button type="submit">Save Scene</button>
    </form>

    <div id="stepFormContainer" style="display: none;">
        <!-- Step form will be dynamically inserted here -->
    </div>

    <a href="/scenes" class="button">Back to Scenes</a>

    <script>
        function showAddStepForm() {
            const stepType = prompt("Enter step type (motor, sound, light, led, pause):");
            if (stepType) {
                loadStepForm(stepType);
            }
        }

        function loadStepForm(type, stepIndex = null) {
            $.get(`/scenes/step-form/${type}`, { stepIndex: stepIndex }, function(formHtml) {
                $('#stepFormContainer').html(formHtml).show();
            });
        }

        function editStep(index) {
            const stepType = $(`#steps .step[data-index="${index}"] input[name^="steps["][name$="[type]"]`).val();
            loadStepForm(stepType, index);
        }

        function removeStep(index) {
            if (confirm('Are you sure you want to remove this step?')) {
                $(`#steps .step[data-index="${index}"]`).remove();
                updateStepIndexes();
            }
        }

        function updateStepIndexes() {
            $('#steps .step').each(function(index) {
                $(this).attr('data-index', index);
                $(this).find('h3').text(`Step ${index + 1}`);
                $(this).find('input, select').each(function() {
                    const name = $(this).attr('name');
                    if (name) {
                        $(this).attr('name', name.replace(/steps\[\d+\]/, `steps[${index}]`));
                    }
                });
            });
        }

        function saveStep(formData) {
            const stepIndex = formData.get('stepIndex');
            const stepHtml = createStepHtml(formData);
            
            if (stepIndex !== null && stepIndex !== undefined) {
                $(`#steps .step[data-index="${stepIndex}"]`).replaceWith(stepHtml);
            } else {
                $('#steps').append(stepHtml);
            }
            
            updateStepIndexes();
            $('#stepFormContainer').hide();
        }

        function createStepHtml(formData) {
            const stepIndex = $('#steps .step').length;
            const stepType = formData.get('type');
            const description = formData.get('description');
            
            return `
                <div class="step" data-index="${stepIndex}">
                    <h3>Step ${stepIndex + 1}</h3>
                    <input type="hidden" name="steps[${stepIndex}][type]" value="${stepType}">
                    <p>Type: ${stepType}</p>
                    <p>Description: ${description}</p>
                    <button type="button" onclick="editStep(${stepIndex})">Edit</button>
                    <button type="button" onclick="removeStep(${stepIndex})">Remove</button>
                </div>
            `;
        }
    </script>
</body>
</html>
