<!-- Voice Selector Modal -->
<div id="voiceModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <h2>Select a voice</h2>
        
        <!-- Recently Used Section -->
        <div class="recently-used">
            <label>Recently used</label>
