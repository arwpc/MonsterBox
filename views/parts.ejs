<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .button {
            display: inline-block;
            padding: 10px 20px;
            margin: 5px;
            background-color: #4CAF50;
            color: white;
            text-align: center;
            text-decoration: none;
            font-size: 16px;
            border: none;
            cursor: pointer;
            width: 150px;
        }
        .button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
    <h1><%= title %> for <%= character.char_name %></h1>
    
    <div id="partButtons">
        <a href="/parts/new/motor" class="button">Add Motor</a>
        <a href="/parts/new/linear-actuator" class="button">Add Linear Actuator</a>
        <a href="/parts/new/light" class="button">Add Light</a>
        <a href="/parts/new/led" class="button">Add LED</a>
        <a href="/parts/new/servo" class="button">Add Servo</a>
        <a href="/parts/new/sensor" class="button">Add Sensor</a>
        <a href="/parts/os-test" class="button">OS Test</a>
    </div>

    <div id="partsContainer">
        <% if (parts.length === 0) { %>
            <p>No parts found for this character.</p>
        <% } else { %>
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Details</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% parts.forEach(function(part) { %>
                        <tr>
                            <td><%= part.name %></td>
                            <td><%= part.type %></td>
                            <td><%= part.details %></td>
                            <td>
                                <a href="/parts/<%= part.id %>/edit" class="button">Edit</a>
                                <button class="button delete-part" data-id="<%= part.id %>">Delete</button>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        <% } %>
    </div>

    <a href="/" class="button">Back to Main Menu</a>

    <script>
        $(document).ready(function() {
            $('.delete-part').on('click', function() {
                const id = $(this).data('id');
                if (confirm('Are you sure you want to delete this part?')) {
                    $.post('/parts/' + id + '/delete')
                        .done(function() {
                            location.reload();
                        })
                        .fail(function(xhr, status, error) {
                            console.error('Error details:', xhr.responseText);
                            alert('Error deleting part: ' + xhr.status + ' ' + xhr.statusText);
                        });
                }
            });
        });
    </script>
</body>
</html>
