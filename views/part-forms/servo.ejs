<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1><%= title %></h1>
    <form action="<%= action %>" method="POST">
        <input type="hidden" name="type" value="servo">
        <% if (part.id) { %>
            <input type="hidden" name="id" value="<%= part.id %>">
        <% } %>
        <div>
            <label for="name">Part Name:</label>
            <input type="text" id="name" name="name" value="<%= part.name || '' %>" required>
        </div>
        <div>
            <label for="characterId">Character:</label>
            <select id="characterId" name="characterId" required>
                <% characters.forEach(function(character) { %>
                    <option value="<%= character.id %>" <%= (part.characterId === character.id) ? 'selected' : '' %>>
                        <%= character.char_name %>
                    </option>
                <% }); %>
            </select>
        </div>
        <div>
            <label for="gpioPin">GPIO Pin:</label>
            <input type="number" id="gpioPin" name="gpioPin" value="<%= part.gpioPin || '' %>" required>
        </div>
        <div>
            <label for="pwmFrequency">PWM Frequency (Hz):</label>
            <input type="number" id="pwmFrequency" name="pwmFrequency" value="<%= part.pwmFrequency || 50 %>" required>
        </div>
        <div>
            <label for="dutyCycle">Duty Cycle (%):</label>
            <input type="number" id="dutyCycle" name="dutyCycle" value="<%= part.dutyCycle || 7.5 %>" step="0.1" required>
        </div>
        <button type="submit">Save Part</button>
    </form>
    <div id="servoTest">
        <h2>Test Servo</h2>
        <div>
            <label for="angle">Angle (0-180):</label>
            <input type="range" id="angle" min="0" max="180" value="90">
            <span id="angleValue">90</span>
        </div>
        <div>
            <label for="duration">Duration (ms):</label>
            <input type="number" id="duration" value="1000" min="100" max="10000">
        </div>
        <button onclick="testPart()">Test Servo</button>
    </div>
    <a href="/parts" class="button">Back to Parts</a>

    <script>
        document.getElementById('angle').addEventListener('input', function() {
            document.getElementById('angleValue').textContent = this.value;
        });

        function testPart() {
            const partData = {
                part_id: <%= part.id || 'null' %>,
                type: 'servo',
                angle: parseInt(document.getElementById('angle').value),
                duration: parseInt(document.getElementById('duration').value),
                gpioPin: parseInt(document.getElementById('gpioPin').value),
                pwmFrequency: parseFloat(document.getElementById('pwmFrequency').value),
                dutyCycle: parseFloat(document.getElementById('dutyCycle').value)
            };

            fetch('/parts/test', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify(partData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Servo test successful');
                } else {
                    alert('Servo test failed: ' + data.message);
                }
            })
            .catch((error) => {
                console.error('Error:', error);
                alert('An error occurred while testing the servo');
            });
        }
    </script>
</body>
</html>
