<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        /* Previous styles remain unchanged */
        .camera-container {
            display: flex;
            gap: 20px;
            margin: 20px 0;
        }

        .camera-feed {
            flex: 1;
            min-width: 0;
            position: relative;
        }

        .camera-controls {
            flex: 0 0 300px;
            padding: 20px;
            background-color: #001100;
            border: 1px solid #00ff00;
            border-radius: 5px;
        }

        #cameraStream {
            width: 100%;
            max-width: 640px;
            border: 2px solid #00ff00;
            background-color: #000;
            display: block;
        }

        .control-group {
            margin-bottom: 20px;
            padding: 10px;
            border: 1px solid #003300;
            border-radius: 5px;
        }

        .status-indicator {
            display: inline-block;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            margin-right: 5px;
        }

        .status-active {
            background-color: #00ff00;
            box-shadow: 0 0 5px #00ff00;
        }

        .status-inactive {
            background-color: #ff0000;
            box-shadow: 0 0 5px #ff0000;
        }

        #motionData, #headTrackData {
            font-family: monospace;
            margin-top: 10px;
            padding: 10px;
            background-color: #000000;
            border: 1px solid #00ff00;
            height: 150px;
            overflow-y: auto;
            color: #00ff00;
            font-size: 12px;
        }

        select, input[type="range"] {
            background-color: #001100;
            color: #00ff00;
            border: 1px solid #00ff00;
            padding: 5px;
            margin: 5px 0;
            width: 100%;
        }

        button {
            background-color: #003300;
            color: #00ff00;
            border: 1px solid #00ff00;
            padding: 8px 16px;
            margin: 5px 0;
            cursor: pointer;
            width: 100%;
            border-radius: 4px;
        }

        button:hover {
            background-color: #004400;
            box-shadow: 0 0 5px #00ff00;
        }

        button:disabled {
            background-color: #001100;
            color: #004400;
            border-color: #004400;
            cursor: not-allowed;
        }

        .error-message {
            color: #ff0000;
            background-color: #330000;
            border: 1px solid #ff0000;
            padding: 10px;
            margin: 10px 0;
            border-radius: 4px;
            display: none;
        }

        .camera-select {
            margin-bottom: 10px;
        }

        .placeholder-text {
            color: #00ff00;
            text-align: center;
            padding: 20px;
            border: 2px dashed #00ff00;
            margin: 20px 0;
            font-size: 1.2em;
        }

        .controls-disabled {
            opacity: 0.5;
            pointer-events: none;
        }
    </style>
</head>
<body>
    <h1><%= title %></h1>

    <div class="camera-container">
        <div class="camera-feed">
            <div style="position: relative;">
                <img id="cameraStream" alt="Camera Stream" src="/images/no-stream.jpg">
            </div>
            <div id="errorMessage" class="error-message"></div>
            <div id="placeholderMessage" class="placeholder-text">Please select a camera and click "Apply Camera Selection" to begin</div>
        </div>
        
        <div class="camera-controls">
            <div class="control-group">
                <h3>Camera Selection</h3>
                <div class="camera-select">
                    <select id="cameraSelect" style="margin-bottom: 10px;">
                        <option value="">Select Camera...</option>
                    </select>
                    <button id="applyCameraSelect">Apply Camera Selection</button>
                </div>
            </div>

            <div id="cameraControls" class="controls-disabled">
                <div class="control-group">
                    <h3>Head Tracking</h3>
                    <select id="servoSelect" style="margin-bottom: 10px;">
                        <option value="">Select Servo...</option>
                        <option value="0">Servo 0</option>
                        <option value="1">Servo 1</option>
                        <option value="2">Servo 2</option>
                        <option value="3">Servo 3</option>
                    </select>
                    <button id="toggleHeadTrack">Start Head Tracking</button>
                    <div id="headTrackData">No head tracking data</div>
                </div>

                <div class="control-group">
                    <h3>Motion Detection</h3>
                    <button id="toggleMotion">Start Motion Detection</button>
                    <div id="motionData">No motion data</div>
                </div>

                <div class="control-group">
                    <h3>Camera Settings</h3>
                    <label for="resolution">Resolution:</label>
                    <select id="resolution">
                        <option value="320,240" selected>320x240 (Recommended)</option>
                        <option value="160,120">160x120 (Low)</option>
                        <option value="640,480">640x480 (High)</option>
                    </select>
                    <button onclick="updateSettings()">Apply Settings</button>
                </div>
            </div>
        </div>
    </div>

    <a href="/" class="button">Back to Main Menu</a>

    <script>
        let motionDetectionActive = false;
        let headTrackingActive = false;
        let motionInterval = null;
        let headTrackInterval = null;
        let streamActive = false;
        let consecutiveErrors = 0;
        const MAX_CONSECUTIVE_ERRORS = 3;

        const streamImg = document.getElementById('cameraStream');
        const errorMessage = document.getElementById('errorMessage');
        const cameraSelect = document.getElementById('cameraSelect');
        const servoSelect = document.getElementById('servoSelect');
        const applyCameraSelect = document.getElementById('applyCameraSelect');
        const placeholderMessage = document.getElementById('placeholderMessage');
        const cameraControls = document.getElementById('cameraControls');

        // Rest of the JavaScript code remains unchanged
        async function loadCameras() {
            try {
                const response = await fetch('/camera/list');
                if (!response.ok) {
                    throw new Error('Failed to fetch cameras');
                }
                const cameras = await response.json();
                
                while (cameraSelect.options.length > 1) {
                    cameraSelect.remove(1);
                }

                cameras.forEach(camera => {
                    camera.devices.forEach(device => {
                        const option = document.createElement('option');
                        option.value = device.id;
                        option.textContent = `${camera.name} (${device.path})`;
                        cameraSelect.appendChild(option);
                    });
                });

                const selectedCamera = '<%= selectedCamera %>';
                if (selectedCamera && selectedCamera !== 'null') {
                    cameraSelect.value = selectedCamera;
                }
            } catch (error) {
                console.error('Failed to load cameras:', error);
                showError('Failed to load cameras: ' + error.message);
            }
        }

        applyCameraSelect.addEventListener('click', async function() {
            const cameraId = parseInt(cameraSelect.value);
            if (!cameraId && cameraId !== 0) {
                showError('Please select a camera');
                return;
            }

            try {
                const response = await fetch('/camera/select', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ cameraId })
                });

                if (!response.ok) {
                    throw new Error('Failed to select camera');
                }

                cameraControls.classList.remove('controls-disabled');
                placeholderMessage.style.display = 'none';
                streamActive = true;
                initializeStream();
            } catch (error) {
                console.error('Failed to select camera:', error);
                showError('Failed to select camera: ' + error.message);
            }
        });

        document.getElementById('toggleHeadTrack').addEventListener('click', async function() {
            if (headTrackingActive) {
                await stopHeadTracking();
            } else {
                await startHeadTracking();
            }
        });

        async function startHeadTracking() {
            const servoId = servoSelect.value;
            if (!servoId && servoId !== '0') {
                showError('Please select a servo');
                return;
            }

            try {
                // Stop other features first
                if (motionDetectionActive) {
                    await stopMotionDetection();
                }
                streamActive = false;
                streamImg.src = '/images/no-stream.jpg';
                
                // Wait for camera to be released
                await new Promise(resolve => setTimeout(resolve, 1000));
                
                const response = await fetch('/camera/control', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        command: 'head_track',
                        params: {
                            action: 'start',
                            'servo-id': parseInt(servoId)
                        }
                    })
                });

                if (!response.ok) {
                    throw new Error('Failed to start head tracking');
                }

                const data = await response.json();
                if (!data.success) {
                    throw new Error(data.error || 'Failed to start head tracking');
                }

                headTrackingActive = true;
                document.getElementById('toggleHeadTrack').textContent = 'Stop Head Tracking';
                document.getElementById('headTrackData').textContent = 'Head tracking active';
                servoSelect.disabled = true;

            } catch (error) {
                console.error('Failed to start head tracking:', error);
                showError('Failed to start head tracking: ' + error.message);
                await stopHeadTracking();
            }
        }

        async function stopHeadTracking() {
            try {
                const response = await fetch('/camera/control', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        command: 'head_track',
                        params: {
                            action: 'stop'
                        }
                    })
                });

                if (!response.ok) {
                    throw new Error('Failed to stop head tracking');
                }

            } catch (error) {
                console.error('Failed to stop head tracking:', error);
                showError('Failed to stop head tracking: ' + error.message);
            } finally {
                headTrackingActive = false;
                document.getElementById('toggleHeadTrack').textContent = 'Start Head Tracking';
                document.getElementById('headTrackData').textContent = 'No head tracking data';
                servoSelect.disabled = false;

                // Wait before restarting stream
                await new Promise(resolve => setTimeout(resolve, 1000));
                
                // Restart the stream
                streamActive = true;
                initializeStream();
            }
        }

        function initializeStream() {
            if (streamActive) {
                const [width, height] = document.getElementById('resolution').value.split(',');
                streamImg.src = `/camera/stream?width=${width}&height=${height}&t=${Date.now()}`;
            }
        }

        function showError(message) {
            errorMessage.textContent = message;
            errorMessage.style.display = 'block';
            setTimeout(() => {
                errorMessage.style.display = 'none';
            }, 5000);
        }

        document.getElementById('toggleMotion').addEventListener('click', async function() {
            if (motionDetectionActive) {
                await stopMotionDetection();
            } else {
                await startMotionDetection();
            }
        });

        async function startMotionDetection() {
            try {
                // Stop other features first
                if (headTrackingActive) {
                    await stopHeadTracking();
                }
                streamActive = false;
                streamImg.src = '/images/no-stream.jpg';
                
                // Wait for camera to be released
                await new Promise(resolve => setTimeout(resolve, 1000));
                
                motionDetectionActive = true;
                document.getElementById('toggleMotion').textContent = 'Stop Motion Detection';
                consecutiveErrors = 0;
                
                // Increased interval to 250ms (4 FPS) to reduce load
                motionInterval = setInterval(async () => {
                    if (consecutiveErrors >= MAX_CONSECUTIVE_ERRORS) {
                        console.error('Too many consecutive errors, stopping motion detection');
                        await stopMotionDetection();
                        showError('Motion detection stopped due to repeated errors');
                        return;
                    }

                    try {
                        const response = await fetch('/camera/control', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                            },
                            body: JSON.stringify({
                                command: 'motion'
                            })
                        });

                        if (!response.ok) {
                            throw new Error('Motion detection failed');
                        }

                        const data = await response.json();
                        
                        if (data.success) {
                            consecutiveErrors = 0;
                            // Update the image with the processed frame
                            if (data.frame) {
                                streamImg.src = 'data:image/jpeg;base64,' + data.frame;
                            }
                            
                            // Update motion data display
                            document.getElementById('motionData').textContent = 
                                JSON.stringify({
                                    motion_detected: data.motion_detected,
                                    center_x: data.center_x,
                                    center_y: data.center_y,
                                    width: data.width,
                                    height: data.height,
                                    area: data.area
                                }, null, 2);
                        } else {
                            throw new Error(data.error || 'Motion detection failed');
                        }
                    } catch (error) {
                        console.error('Motion detection error:', error);
                        consecutiveErrors++;
                        if (consecutiveErrors < MAX_CONSECUTIVE_ERRORS) {
                            showError('Motion detection error: ' + error.message);
                        }
                    }
                }, 250); // Increased interval to 250ms
            } catch (error) {
                console.error('Failed to start motion detection:', error);
                showError('Failed to start motion detection: ' + error.message);
                await stopMotionDetection();
            }
        }

        async function stopMotionDetection() {
            motionDetectionActive = false;
            document.getElementById('toggleMotion').textContent = 'Start Motion Detection';
            if (motionInterval) {
                clearInterval(motionInterval);
                motionInterval = null;
            }
            document.getElementById('motionData').textContent = 'No motion data';
            consecutiveErrors = 0;
            
            // Wait before restarting stream
            await new Promise(resolve => setTimeout(resolve, 1000));
            
            // Restart the stream
            streamActive = true;
            initializeStream();
        }

        async function updateSettings() {
            const [width, height] = document.getElementById('resolution').value.split(',');
            
            try {
                const response = await fetch('/camera/control', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        command: 'settings',
                        params: {
                            width: parseInt(width),
                            height: parseInt(height)
                        }
                    })
                });

                if (!response.ok) {
                    throw new Error('Failed to update camera settings');
                }

                const data = await response.json();
                if (!data.success) {
                    throw new Error(data.error || 'Failed to update settings');
                }

                // Restart the stream with new resolution
                if (streamActive) {
                    initializeStream();
                }
            } catch (error) {
                console.error('Settings update error:', error);
                showError('Failed to update settings: ' + error.message);
            }
        }

        window.addEventListener('beforeunload', async () => {
            if (headTrackingActive) {
                await stopHeadTracking();
            }
            if (motionDetectionActive) {
                await stopMotionDetection();
            }
        });

        loadCameras();
    </script>
</body>
</html>
