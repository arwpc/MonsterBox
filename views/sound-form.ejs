<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <h1><%- title %></h1>
    <form action="<%- action %>" method="POST" enctype="multipart/form-data">
        <% if (sound && sound.id) { %>
            <input type="hidden" name="id" value="<%- sound.id %>">
        <% } %>
        
        <div>
            <label for="characterIds">Characters:</label>
            <select id="characterIds" name="characterIds" multiple required>
                <% characters.forEach(function(character) { %>
                    <option value="<%- character.id %>" 
                        <% if (sound && sound.characterIds && Array.isArray(sound.characterIds) && sound.characterIds.includes(character.id)) { %>
                            selected
                        <% } %>
                    >
                        <%- character.char_name %>
                    </option>
                <% }); %>
            </select>
        </div>

        <div>
            <label for="name">Sound Name:</label>
            <input type="text" id="name" name="name" value="<%- sound ? sound.name : '' %>" required>
        </div>

        <div>
            <label for="sound_files">Sound File(s):</label>
            <input type="file" id="sound_files" name="sound_files" accept=".mp3,.wav" <% if (!sound) { %>multiple<% } %> required>
            <% if (sound && sound.filename) { %>
                <p>Current file: <%- sound.filename %></p>
            <% } %>
        </div>

        <button type="submit">Save Sound(s)</button>
    </form>

    <a href="/sounds" class="button">Back to Sounds</a>

    <script>
        // You can add any client-side JavaScript here if needed
    </script>
</body>
</html>
