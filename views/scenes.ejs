<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <h1><%= title %></h1>
    <a href="/scenes/new" class="button">Add New Scene</a>
    <table>
        <thead>
            <tr>
                <th>Scene Name</th>
                <th>Character</th>
                <th>Steps</th>
                <th>Actions</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            <% scenes.forEach(function(scene) { %>
                <tr>
                    <td><%= scene.scene_name %></td>
                    <td><%= characters.find(c => c.id === scene.character_id)?.char_name || 'N/A' %></td>
                    <td><%= scene.steps ? scene.steps.length : 0 %></td>
                    <td>
                        <% if (scene.steps) { %>
                            <ul>
                                <% scene.steps.forEach(function(step) { %>
                                    <li><%= step.description %></li>
                                <% }); %>
                            </ul>
                        <% } %>
                    </td>
                    <td>
                        <a href="/scenes/<%= scene.id %>" class="button">Edit</a>
                        <button onclick="deleteScene(<%= scene.id %>)" class="button">Delete</button>
                        <button onclick="triggerScene(<%= scene.id %>)" class="button">Trigger</button>
                        <button onclick="scheduleScene(<%= scene.id %>)" class="button">Schedule</button>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <button onclick="startScheduler()" class="button">Start Scheduler</button>
    <button onclick="stopScheduler()" class="button">Stop Scheduler</button>
    <a href="/" class="button">Back to Main Menu</a>

    <script>
        function deleteScene(id) {
            if (confirm('Are you sure you want to delete this scene?')) {
                $.ajax({
                    url: '/scenes/' + id,
                    type: 'DELETE',
                    success: function() {
                        location.reload();
                    },
                    error: function(xhr, status, error) {
                        console.error('Error deleting scene:', error);
                        alert('Error deleting scene: ' + error);
                    }
                });
            }
        }

        function triggerScene(id) {
            $.post('/scenes/' + id + '/trigger')
                .done(function() {
                    alert('Scene triggered successfully');
                })
                .fail(function(xhr, status, error) {
                    console.error('Error triggering scene:', error);
                    alert('Error triggering scene: ' + error);
                });
        }

        function scheduleScene(id) {
            const schedule = prompt('Enter schedule (cron format):');
            if (schedule) {
                $.post('/scenes/' + id + '/schedule', { schedule: schedule })
                    .done(function() {
                        alert('Scene scheduled successfully');
                    })
                    .fail(function(xhr, status, error) {
                        console.error('Error scheduling scene:', error);
                        alert('Error scheduling scene: ' + error);
                    });
            }
        }

        function startScheduler() {
            $.post('/scenes/schedule/start')
                .done(function() {
                    alert('Scheduler started successfully');
                })
                .fail(function(xhr, status, error) {
                    console.error('Error starting scheduler:', error);
                    alert('Error starting scheduler: ' + error);
                });
        }

        function stopScheduler() {
            $.post('/scenes/schedule/stop')
                .done(function() {
                    alert('Scheduler stopped successfully');
                })
                .fail(function(xhr, status, error) {
                    console.error('Error stopping scheduler:', error);
                    alert('Error stopping scheduler: ' + error);
                });
        }
    </script>
</body>
</html>
