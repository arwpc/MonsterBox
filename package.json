{
  "name": "monsterbox",
  "version": "1.0.0",
  "description": "A refactored scene builder application for managing scenes and steps.",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "start:legacy": "node --no-deprecation app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:legacy": "nodemon --trace-deprecation --trace-warnings app.js",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "cross-env NODE_ENV=test mocha --reporter ./tests/cleanReporter.js tests/**/*.test.js",
    "test:watch": "cross-env NODE_ENV=test mocha --reporter ./tests/cleanReporter.js --watch tests/**/*.test.js",
    "test:sound": "mocha tests/sound-playback.test.js",
    "test:rpi": "mocha --require ./tests/setupTests.js tests/rpi-dependencies.test.js",
    "test:api-keys": "cross-env NODE_ENV=test mocha --reporter ./tests/cleanReporter.js tests/api-keys.test.js",
    "test:api-keys-verbose": "cross-env NODE_ENV=test mocha tests/api-keys.test.js",
    "check-api-keys": "node scripts/test-api-keys.js",
    "check-config": "node scripts/test-api-keys.js --config-only",
    "test:mcp": "node scripts/test-mcp-setup.js",
    "test:mcp-remote": "node scripts/test-mcp-remote-capabilities.js",
    "test:animatronic-ssh": "node scripts/test-animatronic-ssh.js",
    "collect:github-logs": "node scripts/github-log-collector.js",
    "collect:rpi-logs": "node scripts/rpi-log-collector.js",
    "setup:rpi": "node scripts/setup-rpi-logging.js",
    "setup:rpi-ssh": "echo 'Run: ssh-copy-id pi@YOUR_RPI_IP to setup SSH keys'",
    "animatronic:manage": "node scripts/animatronic-manager.js",
    "animatronic:add": "node scripts/animatronic-manager.js add",
    "animatronic:view": "node scripts/animatronic-manager.js view",
    "animatronic:test-all": "node scripts/animatronic-manager.js test-all",
    "install:sematext-deps": "node scripts/install-sematext-deps.js",
    "setup:sematext": "node scripts/setup-sematext-agent.js",
    "test:sematext": "node scripts/test-sematext.js",
    "start:sematext-mcp": "node mcp-servers/sematext-server.js",
    "mcp:log-collector": "node mcp-servers/log-collector-server.js"
  },
  "dependencies": {
    "compression": "^1.8.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.9",
    "express": "^4.21.1",
    "express-session": "^1.17.3",
    "form-data": "^4.0.1",
    "helmet": "^8.1.0",
    "i2c-bus": "^5.2.3",
    "mpg123": "^0.2.3",
    "multer": "^1.4.5-lts.1",
    "node-disk-info": "^1.3.0",
    "onoff": "^6.0.3",
    "task-master-ai": "^0.16.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/compression": "^1.8.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.30",
    "@types/supertest": "^6.0.3",
    "axios": "^1.7.7",
    "chai": "^4.5.0",
    "chai-http": "^4.3.0",
    "cross-env": "^7.0.3",
    "inquirer": "^8.2.6",
    "jest": "^29.7.0",
    "mocha": "^10.7.3",
    "nodemon": "^3.1.7",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-repo/monsterbox.git"
  },
  "keywords": [
    "scene",
    "builder",
    "express",
    "ejs",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-repo/monsterbox/issues"
  },
  "homepage": "https://github.com/your-repo/monsterbox#readme",
  "directories": {
    "test": "tests"
  }
}
